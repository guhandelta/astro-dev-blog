---
import { capitalize } from '../utils';

const { tags } = Astro.props;

interface Props{
    tags: string[];
}

---

<div class="flex flex-wrap pb-2">
    {tags && tags.map((tag: string, index: number ) => (
        <span class={
            index % 2 === 0
                ? "px-2 py-1 bg-orange-500 text-white rounded-full text-xs hover:opacity-90 mx-1"
                : "px-2 py-1 bg-indigo-500 text-white rounded-full text-xs hover:opacity-90 mx-1"
        }>
            <a href={"/articles/tag/" + tag}>#{capitalize(tag)}</a>
        </span>
    ))}
</div>